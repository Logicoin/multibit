<shortcuts> 
   <programGroup defaultName="MultiLogic" location="applications"/> 
   <shortcut name="MultiLogic ${project.version}" 
             target="$INSTALL_PATH/multilogic.exe" 
             description="MultiLogic" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multilogic.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiLogic ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiLogic" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>